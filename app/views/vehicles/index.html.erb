<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Vehicletype</th>
      <th>Vehicleplate</th>
      <th>Vehiclebrand</th>
      <th>Vehiclemodel</th>
      <th>Maincolor</th>
      <th>Secondarycolor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.VehicleType %></td>
        <td><%= vehicle.vehiclePlate %></td>
        <td><%= vehicle.vehicleBrand %></td>
        <td><%= vehicle.vehicleModel %></td>
        <td><%= vehicle.mainColor %></td>
        <td><%= vehicle.secondaryColor %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

